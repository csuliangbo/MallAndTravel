<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="2dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="收货人"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_mid" />

    <com.ych.mall.widget.ClearEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:background="@null"
        android:hint="请输入收货人"
        android:paddingRight="20dp"
        android:textSize="@dimen/text_mid"
        android:id="@+id/mReceiver" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="手机号码"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_mid" />

        <com.ych.mall.widget.ClearEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:paddingRight="20dp"
            android:textSize="@dimen/text_mid"
            android:id="@+id/mPhone" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="省市地区"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_mid" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请选择地址"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:paddingRight="20dp"
            android:textSize="@dimen/text_mid"
            android:id="@+id/onCityPicker" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="详细地址"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_mid" />

        <com.ych.mall.widget.ClearEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入地址"

            android:paddingRight="20dp"
            android:textSize="@dimen/text_mid"
            android:id="@+id/mAdressDetail" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="邮编"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_mid" />

        <com.ych.mall.widget.ClearEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入邮政编码"
            android:inputType="phone"
            android:paddingRight="20dp"
            android:textSize="@dimen/text_mid"
            android:id="@+id/zipCode" />
    </LinearLayout>

    <CheckBox
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="@dimen/text_mid"
        android:background="@drawable/selector_layout_pressed"
        android:text="设为默认地址"
        android:textColor="@color/black"
        android:checked="false"
        android:id="@+id/mDefault" />
  <com.ych.mall.widget.ProgressButton
      android:id="@+id/onSubmit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"></com.ych.mall.widget.ProgressButton>
</LinearLayout>