<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--顶部广告-->
    <com.ych.mall.widget.SlideShowView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <!--切换-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/toMall"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_home_text"
            android:gravity="center"
            android:text="会员商城"
            android:enabled="false"
            android:textColor="@drawable/selector_home_text_color"

            />

        <TextView
            android:id="@+id/toTravel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_home_text"

            android:gravity="center"
            android:text="会员旅游"
            android:textColor="@drawable/selector_home_text_color" />
    </LinearLayout>
    <!--分类栏-->
    <!--中部广告-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/banner_mid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/banner_mid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"

            />
    </FrameLayout>
    <!--推荐路线-->

</LinearLayout>